!!!
%html
  %head
    %title AgileTour Brussels
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = favicon_link_tag "favicon.png", :type => "image/png"
    = csrf_meta_tags

  %body
    #wrap
      %header#header
        %h1= image_tag "logo.png", :alt => "AgileTour Brussels 2012"
        %nav#main-menu
          %ul
            %li= link_to t("menu.home"), root_url
            %li= link_to t("menu.speakers"), speakers_url
        #register-box
          #counter
            %span.days= days_left
            = t("register.days_left")
          .button= link_to t("register.register"), "http://at2012.agiletour.org/en/brussels.html"
      #content
        #slideshow
          .slides_container
            %div= image_tag "atomium.jpg"
            %div= image_tag "beers.png"
            %div= image_tag "place.jpg"
            %div= image_tag "flags.jpg"
        = yield
      .push
    %footer#footer
      .wrap
        .copyright= t("footer.copyright")
        %nav#footer-nav
          %ul
            %li= link_to t("menu.home"), root_url
            %li= link_to t("menu.speakers"), speakers_url

:javascript
  $("#slideshow").slides({
    play: 5000,
    pause: 2500,
    generateNextPrev: false,
    generatePagination: false,
    effect: 'fade'
  });
