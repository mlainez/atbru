!!!
- content_for :submenu do
  - if params[:year] == '2012'
    %ul.edition_2012
      %li= link_to t("menu.speakers"     ), speakers_url(      year: 2012 )
      %li= link_to t("menu.program"      ), program_url(       year: 2012 )
      %li= link_to t("menu.sponsors"     ), sponsors_url(      year: 2012 )
      %li= link_to t("menu.presentations"), presentations_url( year: 2012 )

%html
  %head
    %title AgileTour Brussels
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyB2GAsb-RstnEMJCXBLf6NWQNAWsnis3Ms&sensor=false"
    = favicon_link_tag "favicon.png", :type => "image/png"
    = csrf_meta_tags
    %meta{ 'og:image' => "http://www.atbru.be/assets/logo.png" }

  %body
    #wrap
      %header#header
        %h1= image_tag "logo.png", :alt => "AgileTour Brussels 2012"
        %nav#main-menu
          %ul
            %li= link_to t("menu.home"), root_url
            %li= link_to t("menu.speakers"), speakers_url
            /%li=# link_to t("menu.program"), program_url
            %li= link_to t("menu.sponsors"), sponsors_url
            /%li=# link_to t("menu.presentations"), presentations_url
            %li.edition_2012= link_to t("menu.edition_2012"), speakers_url( year: 2012 )
        - if content = yield(:submenu)
          %nav#sub-menu
            = content
        #register-box
          #counter
            %span.days
            = days_left
            = t("register.days_left")
          .button=# link_to t("register.register"), registrations_path

      #content
        #slideshow
          .slides_container
            %div= image_tag "retro.jpg"
            %div= image_tag "tiago.jpg"
            %div= image_tag "lego_game.jpg"
            %div= image_tag "atbru.jpg"
        #flash
          - if flash[:notice]
            %p.notice
              = flash[:notice]
          - if flash[:error]
            %p.error
              = flash[:error]
        = yield
      .push
    %footer#footer
      .wrap
        .copyright= t("footer.copyright")
        %nav#footer-nav
          %ul
            %li= link_to t("menu.home"), root_url
            %li= link_to t("menu.speakers"), speakers_url
            /%li=# link_to t("menu.program"), program_url
            %li= link_to t("menu.sponsors"), sponsors_url
            /%li=# link_to t("menu.presentations"), presentations_url

= render "shared/map"
